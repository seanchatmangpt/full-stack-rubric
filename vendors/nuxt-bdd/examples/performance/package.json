{
  "name": "nuxt-bdd-performance-example",
  "version": "1.0.0",
  "description": "Performance testing example with BDD scenarios for load, stress, and benchmark testing",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate", 
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "test": "vitest",
    "test:bdd": "cucumber-js",
    "test:performance": "cucumber-js --tags @performance",
    "test:load": "cucumber-js --tags @load",
    "test:stress": "cucumber-js --tags @stress",
    "test:benchmark": "cucumber-js --tags @benchmark",
    "perf:monitor": "node scripts/performance-monitor.js"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/test-utils": "^3.9.0",
    "@playwright/test": "^1.40.1", 
    "@vitest/ui": "^1.0.4",
    "@cucumber/cucumber": "^10.2.1",
    "autocannon": "^7.15.0",
    "happy-dom": "^12.10.3",
    "lighthouse": "^11.4.0",
    "nuxt": "^3.9.0",
    "playwright": "^1.40.1",
    "vitest": "^1.0.4",
    "web-vitals": "^3.5.0"
  },
  "dependencies": {
    "nuxt-bdd": "file:../../"
  }
}