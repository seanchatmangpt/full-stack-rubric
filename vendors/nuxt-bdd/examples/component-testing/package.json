{
  "name": "nuxt-bdd-component-testing-example",
  "version": "1.0.0",
  "description": "Component-focused BDD testing example showcasing Vue component testing patterns",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview", 
    "postinstall": "nuxt prepare",
    "test": "vitest",
    "test:bdd": "cucumber-js",
    "test:components": "cucumber-js --tags @component",
    "test:integration": "cucumber-js --tags @integration", 
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/test-utils": "^3.9.0",
    "@playwright/test": "^1.40.1",
    "@storybook/vue3": "^7.6.6",
    "@storybook/vue3-vite": "^7.6.6",
    "@vitest/ui": "^1.0.4",
    "@vue/test-utils": "^2.4.3",
    "@cucumber/cucumber": "^10.2.1",
    "happy-dom": "^12.10.3",
    "nuxt": "^3.9.0",
    "playwright": "^1.40.1", 
    "vitest": "^1.0.4",
    "storybook": "^7.6.6"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "nuxt-bdd": "file:../../"
  }
}